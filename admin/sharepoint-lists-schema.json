{
  "lists": [
    {
      "name": "Jobs",
      "description": "Main job registry - replaces 'Book a Job' worksheet",
      "columns": [
        {"name": "Title", "type": "Single line of text", "required": true},
        {"name": "Rego", "type": "Single line of text", "required": true, "indexed": true},
        {"name": "CustomerName", "type": "Single line of text", "required": true},
        {"name": "InvoiceName", "type": "Single line of text", "required": false},
        {"name": "Phone1", "type": "Single line of text", "required": false},
        {"name": "Phone2", "type": "Single line of text", "required": false},
        {"name": "Email", "type": "Single line of text", "required": false},
        {"name": "Address", "type": "Multiple lines of text", "required": false},
        {"name": "JobType", "type": "Choice", "choices": ["Roadside Assistance", "Pre Purchase Vehicle Inspection", "Fuel Extraction", "Other"], "required": false},
        {"name": "JobRego", "type": "Single line of text", "required": false},
        {"name": "SellerData", "type": "Multiple lines of text", "required": false},
        {"name": "ETAMinutes", "type": "Number", "required": false},
        {"name": "BookingID", "type": "Single line of text", "required": false, "indexed": true},
        {"name": "Status", "type": "Choice", "choices": ["New", "In Progress", "Completed", "Cancelled", "DNC"], "required": false, "default": "New"},
        {"name": "IsYellowHighlighted", "type": "Yes/No", "required": false, "default": false},
        {"name": "CreatedDate", "type": "Date and Time", "required": false},
        {"name": "ModifiedDate", "type": "Date and Time", "required": false}
      ]
    },
    {
      "name": "JobBuildNotes",
      "description": "Supplier and job build details - replaces 'Job Build Notes' worksheet",
      "columns": [
        {"name": "Title", "type": "Single line of text", "required": true},
        {"name": "Rego", "type": "Single line of text", "required": true, "indexed": true},
        {"name": "RecordType", "type": "Choice", "choices": ["Supplier", "Customer", "Job"], "required": true},
        {"name": "Supplier", "type": "Single line of text", "required": false},
        {"name": "Costings", "type": "Currency", "required": false},
        {"name": "BankAccount", "type": "Single line of text", "required": false},
        {"name": "Supp_Email", "type": "Single line of text", "required": false},
        {"name": "Supp_Phone", "type": "Single line of text", "required": false},
        {"name": "JobID", "type": "Lookup", "lookupList": "Jobs", "lookupField": "ID", "required": false}
      ]
    },
    {
      "name": "WhiteList",
      "description": "Configuration and lookup tables - replaces 'White_List' worksheet",
      "columns": [
        {"name": "Title", "type": "Single line of text", "required": true},
        {"name": "Category", "type": "Choice", "choices": ["API_Extn_Change_List", "Colour_Header", "Colour_Code", "Header_Name", "Sheet_Name", "Other"], "required": true},
        {"name": "Value1", "type": "Single line of text", "required": false},
        {"name": "Value2", "type": "Single line of text", "required": false},
        {"name": "Value3", "type": "Single line of text", "required": false},
        {"name": "NumericValue", "type": "Number", "required": false}
      ]
    },
    {
      "name": "Receipts",
      "description": "Receipt records - replaces 'Receipts_List' worksheet",
      "columns": [
        {"name": "Title", "type": "Single line of text", "required": true},
        {"name": "JobID", "type": "Lookup", "lookupList": "Jobs", "lookupField": "ID", "required": true},
        {"name": "ReceiptNumber", "type": "Single line of text", "required": true, "indexed": true},
        {"name": "Amount", "type": "Currency", "required": true},
        {"name": "ReceiptDate", "type": "Date and Time", "required": true},
        {"name": "Status", "type": "Choice", "choices": ["Pending", "Processed", "Void"], "required": false}
      ]
    },
    {
      "name": "Invoices",
      "description": "Invoice records - replaces 'Invoice_List' worksheet",
      "columns": [
        {"name": "Title", "type": "Single line of text", "required": true},
        {"name": "JobID", "type": "Lookup", "lookupList": "Jobs", "lookupField": "ID", "required": true},
        {"name": "InvoiceNumber", "type": "Single line of text", "required": true, "indexed": true},
        {"name": "Amount", "type": "Currency", "required": true},
        {"name": "InvoiceDate", "type": "Date and Time", "required": true},
        {"name": "Status", "type": "Choice", "choices": ["Draft", "Sent", "Paid", "Overdue", "Cancelled"], "required": false}
      ]
    },
    {
      "name": "Transactions",
      "description": "Transaction records - replaces 'Transaction_Record' worksheet",
      "columns": [
        {"name": "Title", "type": "Single line of text", "required": true},
        {"name": "JobID", "type": "Lookup", "lookupList": "Jobs", "lookupField": "ID", "required": false},
        {"name": "TransactionType", "type": "Choice", "choices": ["Payment", "Refund", "Adjustment"], "required": true},
        {"name": "Amount", "type": "Currency", "required": true},
        {"name": "TransactionDate", "type": "Date and Time", "required": true},
        {"name": "PaymentMethod", "type": "Choice", "choices": ["Stripe", "Bank Transfer", "Cash", "Other"], "required": false}
      ]
    },
    {
      "name": "Contractors",
      "description": "Contractor/Supplier details - replaces 'Contractor_Details' worksheet",
      "columns": [
        {"name": "Title", "type": "Single line of text", "required": true},
        {"name": "SupplierName", "type": "Single line of text", "required": true},
        {"name": "Email", "type": "Single line of text", "required": false},
        {"name": "Phone", "type": "Single line of text", "required": false},
        {"name": "BankAccount", "type": "Single line of text", "required": false},
        {"name": "IsActive", "type": "Yes/No", "required": false, "default": true}
      ]
    },
    {
      "name": "APINumbers",
      "description": "API number management - replaces API worksheet",
      "columns": [
        {"name": "Title", "type": "Single line of text", "required": true},
        {"name": "APINumber", "type": "Single line of text", "required": true, "indexed": true, "unique": true},
        {"name": "Extension", "type": "Single line of text", "required": false},
        {"name": "State", "type": "Single line of text", "required": false},
        {"name": "IsActive", "type": "Yes/No", "required": false, "default": true}
      ]
    },
    {
      "name": "APIExtensionList",
      "description": "API Extension change list - lookup table",
      "columns": [
        {"name": "Title", "type": "Single line of text", "required": true},
        {"name": "API_State", "type": "Single line of text", "required": true},
        {"name": "API_Set_Extn", "type": "Single line of text", "required": true}
      ]
    }
  ]
}

